
  <div class="container-fluid">
    <div class="row content">
      <div class="col-sm-2 sidenav">
        <form>
          <p> Apply Technology Filter:</p>
          <p><input id="java" type="checkbox">Java</input></p>
          <p><input id="python" type="checkbox">Python</input></p>
          <p><input id="c" type="checkbox">C</input></p>
          <p><input type="submit" value="Apply"></input></p>
      </form>
      </div>
      <div class="col-sm-8 text-left">
        <p> Search for Jobs:</p>
        <form>
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
        
        
        <p>Jobs List</p>

<!--//edit the jobs here-->
        <section>
          <h1>Jobs</h1>
          {{#each company}}  
            <article class="company">
              <!--<label>Company</label> : {{name}} <br/>
              -->
              <h2><a href="info/companyDetails/{{_id}}">{{name}}</a></h2>
              {{#each projects}}
                  <article class="projects"></article>
                    <h3><a href="info/jobDetails/{{_id}}">{{title}}</a></h3>
                    <li>{{position}}</li>
                  </article>
              {{/each}}
              
            </article>
          {{/each}}
        </section>

      </div>
    </div>
  </div>

  





